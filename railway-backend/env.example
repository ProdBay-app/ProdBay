# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (regex pattern for allowed origins)
# Example: ^https:\/\/.*prodbay.*\.vercel\.app$ (allows any subdomain of prodbay.vercel.app)
ALLOWED_ORIGINS=^https:\/\/.*prodbay.*\.vercel\.app$

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Resend Email Configuration
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=requests@prodbay.com

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Producer Configuration (optional - used for email notifications)
PRODUCER_EMAIL=producer@example.com
PRODUCER_NAME=Producer

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
